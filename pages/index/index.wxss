.movie-container{
  display: flex;
  flex-direction: column;
  position: relative;
}
.navbar{
  display: flex;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 500;
  width: 100%;
  height: 50px;
  flex-direction: row;
  text-align: center;
  color: #A8A8A8;
  font-size: 15px;
  box-sizing: border-box;
  background-color: #FFF;
  border-bottom: 1rpx solid #DFDFDF;
}
.navbar-item{
  flex: 1;
  padding: 26rpx 0px;
}
/* 下边框左右动画 */
.line{position: absolute;bottom: 0;left: 0;height: 4rpx;background: red;transition: all .3s ease-out .1s;}

.movie-content-wrapper{
  padding-top: 50px;
}
.goodsCont{
  width: 100%;
  display: flex;
}
.Left{
  width: 15%;
  padding: 0 25rpx;
  height: 100%;
  font-size: 28rpx;
  background: #F4F5F7;
  color: #717578;
}
.Left view{
  padding: 50rpx 0;
  border-bottom: 1rpx solid #eee;
}
.Right{
  flex: 1;
}
.title{
  padding: 15rpx 30rpx;
  border-left: 7rpx solid #D9DDE0;
  color: #9E9FA3;
  font-size: 30rpx;
  background: #F4F5F7;
}
.Foot{
  margin: 0 40rpx;
  padding: 40rpx 0 30rpx;
  border-bottom: 1px solid #eee;
  display: flex;
}
.Foot>cover-image{
  width: 150rpx;
}
.Foot>view .name{
  padding: 0 0 0 20rpx;
  font-size: 33rpx;
  color: black;
}
.Foot>view>view{
  padding: 5rpx 0 5rpx 20rpx;
  font-size: 25rpx;
  color: #A4A5A9;
  display: flex;
}
.Foot>view>view view{
  padding-right: 20rpx;
}
.num{
  display: flex;
  justify-content: space-between;
}
.num view{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.num>view view:nth-child(1){
  color: red;
  font-size: 32rpx;
}
.num>view view:nth-child(2){
  text-decoration: line-through;
}
.num cover-image{
  width: 50rpx;
}