/**index.wxss**/
.goods {
  width: 100%;
}
.goodsTop{
  width: 100%;
  font-size: 25rpx;
  color: white;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  position: relative;
}
.goodsTop>cover-image{
  width: 100%;
  filter: blur(10px);
  position: absolute;
  z-index: -2;
}
.goodsTop .shadow{
  width: 100%;
  height: 100%;
  background: black;
  opacity: 0.5;
  position: absolute;
  z-index: -1;
}
.goodsTopShop{
  padding: 40rpx 30rpx 30rpx 40rpx;
  box-sizing: border-box;
  display: flex;
}
.goodsTopShop>cover-image{
  width: 150rpx;
  height: 150rpx;
}
.brand{
  padding-left: 30rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
}
.brand>view{
  padding-bottom: 13rpx;
  display: flex;
  align-items: center;
}
.brand>view:nth-child(1){
  font-size: 40rpx;
}
.brand>view:nth-child(1) view:nth-child(1){
  height: 45rpx;
  margin-right: 10rpx;
  padding: 0 8rpx;
  border-radius: 7rpx;
  font-size: 32rpx;
  background: red;
}
.announcement{
  font-size: 23rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}
.announcement>view:nth-child(1){
  width: 100%;
  height: 100%;
  position: absolute;
  background: black;
  opacity: 0.2;
  z-index: -1;
}
.announcement>view:nth-child(2){
  margin: 20rpx 10rpx 20rpx 20rpx;
  padding: 1rpx 7rpx;
  font-size: 19rpx;
  background: white;
  color: #463F39;
  border-radius: 5rpx;
}
.announcement>view:nth-child(3){
  flex: 1;
}
.announcement>view:nth-child(4){
  margin-right: 20rpx;
}
.goodsList{
  width: 100%;
  display: flex;
  flex-direction: column;
}
